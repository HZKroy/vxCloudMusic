/* pages/search/search.wxss */
/* 头部 */
.searchContainer{
  padding: 0 20rpx;
}
.header{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.searchInput{
  position: relative;
  flex: 1;
  background: rgba(237,237,237,0.3);
  border-radius: 30rpx;
}
.header .clear{
  position: absolute;
  right: 30rpx;
  top: 0;
  font-size: 30rpx;
  z-index: 10;
}
.cancel{
  width: 100rpx;
  text-align: center;
}
.icon-sousuo{
  position: absolute;
  left: 20rpx;
}
.searchInput input{
  margin-left: 50rpx;
  height: 60rpx;
}
.placeholder{
  color: #d43c33;
  font-size: 28rpx;
}

/* 搜索内容展示 */
.searchContent{
  color:#d43c33;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #d43c33;
}
.searchList .searchItem{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.searchList .content{
  flex: 1;
  margin-left: 40rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;

  max-width: 600rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* 搜索历史记录 */
.history{
  position: relative;
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
.history .title{
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.history .historyItem{
  font-size: 26rpx;
  background: #ededed;
  margin-left: 20rpx;
  padding: 0 20rpx;
  border-radius: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.history .iconfont{
  position: absolute;
  bottom: 5rpx;
  right: 15rpx;
  font-size: 30rpx;
  z-index: 8;
}

/* 热搜榜 */
.hotContainer .title{
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.hotList{
  display: flex;
  flex-wrap: wrap;
}
.hotItem{
  display: flex;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.hotItem .order{
  margin: 0 15rpx;
}
.hotItem .name{
  max-width: 200rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.hotItem .image{
  width: 20rpx;
  height: 15rpx;
  margin-left: 10rpx;
  line-height: 15rpx;
  margin-top: 15rpx;
  margin-bottom: 20rpx;
}