/* pages/home/home.wxss */

/* 轮播图 */
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}


/* 导航图标 */
.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navItem .iconfont{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240,19,19);
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0;
}
.navItem text{
  font-size: 24rpx;
}

/* 推荐歌曲 */
.recommendContainer{
  padding: 20rpx;
}
/* 推荐歌曲滚动区域 */
.recommendScroll{
  display: flex;
  height: 300rpx;
}
.scrollItem{
  width: 200rpx;
  margin: 10rpx 10rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 单行文本溢出隐藏 */
  /* white-space: nowrap; */
  /* display: block; */
  /* 块级作用域溢出隐藏 */
  /* overflow: hidden; */
  /* text-overflow: ellipsis; */

  /* 多行文本溢出隐藏 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  /* 设置对其模式 */
  -webkit-box-orient: vertical;
  /* 设置限制行数 */
  -webkit-line-clamp: 2;
  /* 需要加上，否则不会省略成... */
  word-break: break-all;  
}

/* 排行榜 */
.topList{
  padding: 20rpx;
}
.topListSwiper{
  height: 380rpx;
}
.topList .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.topList .musicListItem{
  display: flex;
}
.topList .swiperItem{
  width: 96%;
  background-color:white;
}
.topList image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;

}
.topList .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.topList .musicName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}






